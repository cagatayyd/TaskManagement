	<script>
		$(document).ready(function () {
			$('#createUserForm').on('submit', function (event) {
				event.preventDefault();

				$.ajax({
					url: '@Url.Action("CreateAjax", "User", new { area = "Admin" })',
					type: 'POST',
					data: $(this).serialize(),
					success: function (response) {
						if (response.success) {
							// Clear previous messages
							$('#liveAlertPlaceholder').empty();

							// Append success message
							var successAlert = '<div class="alert alert-success">Kullanıcı başarı ile oluşturuldu.</div>';
							$('#liveAlertPlaceholder').append(successAlert);

							// Hide error message if it's shown
							$('#errorMessage').hide();

							// Reset form fields
							$('#createUserForm')[0].reset();
						} else {
							// Handle error response
							$('#errorMessage').text(response.message).show();
							$('#successMessage').hide();
						}
					},
					error: function (xhr, status, error) {
						$('#errorMessage').text('An error occurred: ' + error).show();
						$('#successMessage').hide();
					}
				});
			});
		});

	</script>
